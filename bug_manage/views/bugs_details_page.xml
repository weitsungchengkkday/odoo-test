<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <template id="bugs_details_page" name="Bug Details">
    <div class="container">
        <center><h3>Bug Order Details</h3></center>
        <table class="table-striped table">
            <thead style="font-size: 16px;">
            <tr>
                <th>Bug Name</th>
                <th>Bug Detail</th>
            </tr>
            </thead>
            <tbody>
            <t t-foreach="bugs_select" t-as="bug">
            <tr>
            <td><span t-esc="bug.name"/></td>
            <td><span t-esc="bug.detail"/></td>
            </tr>
            </t>
            </tbody>
        </table>
    </div>
</template>
</odoo>